<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OmniMedia.ViewModels"
             xmlns:icons="using:OmniMedia.Assets.Icons"
             xmlns:images="using:OmniMedia.Assets.Images"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="OmniMedia.Views.MusicSearchView"
             x:DataType="vm:MusicSearchViewModel">
	<Design.DataContext>
		<vm:MusicSearchViewModel />
	</Design.DataContext>
	<StackPanel Spacing="10" Margin="10">
		<TextBox Text="{Binding SearchText}"
                 Watermark="Wpisz nazwÄ™ albumu lub artysty..."
                 FontSize="16"
                 HorizontalAlignment="Stretch"/>

		<ProgressRing IsVisible="{Binding IsBusy}"
                      HorizontalAlignment="Center"/>

		<ScrollViewer VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
			<ItemsControl ItemsSource="{Binding SearchResults}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<WrapPanel Orientation="Horizontal"
                                   HorizontalSpacing="15"
                                   VerticalSpacing="15"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>

				<ItemsControl.ItemTemplate>
					<DataTemplate x:DataType="vm:SearchAlbumItemViewModel">
						<Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5"
                                Background="White"
                                Padding="5"
                                Width="150" Height="220">
							<StackPanel Spacing="5">
								<Image Source="{Binding Cover}"
                                       Width="140" Height="140"
                                       Stretch="UniformToFill"
                                       HorizontalAlignment="Center"/>

								<TextBlock Text="{Binding Title}"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           MaxHeight="30"/>

								<TextBlock Text="{Binding Artist}"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           FontSize="10"
                                           MaxHeight="25"/>

								<Button Content="Dodaj"
                                        HorizontalAlignment="Stretch"
                                        Command="{Binding AddToCollectionCommand}"
                                        CommandParameter="{Binding}"
                                        Margin="0,5,0,0"/>
							</StackPanel>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
	</StackPanel>
</UserControl>
